<!-- Validation failure messages -->
<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Post #<%= @post.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_post/<%= @post.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for events_id -->
      <div class="form-group">
        <label for="event_id" class="control-label">
          Events
        </label>

        <input type="text" id="event_id" name="event_id" placeholder="Events" class="form-control" value="<%= @post.event_id %>">
      </div>

      <!-- Label and input for content -->
      <div class="form-group">
        <label for="content" class="control-label">
          Content
        </label>

        <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @post.content %></textarea>
      </div>

      <!-- Label and input for active -->
      <div class="checkbox">
        <label for="active">
          <input type="checkbox" id="active" name="active" value="1" <%= "checked" if @post.active %>>
          Active
        </label>
      </div>

      <!-- Label and input for ticket_amount -->
      <div class="form-group">
        <label for="ticket_amount" class="control-label">
          Ticket amount
        </label>

        <input type="text" id="ticket_amount" name="ticket_amount" placeholder="Ticket amount" class="form-control" value="<%= @post.ticket_amount %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @post.user_id %>">
      </div>

      <!-- Label and input for sell_buy -->
      <div class="form-group">
        <label for="sell_buy" class="control-label">
          Sell buy
        </label>

        <input type="text" id="sell_buy" name="sell_buy" placeholder="Sell buy" class="form-control" value="<%= @post.sell_buy %>">
      </div>

      <!-- Label and input for number_tickets -->
      <div class="form-group">
        <label for="number_tickets" class="control-label">
          Number tickets
        </label>

        <input type="text" id="number_tickets" name="number_tickets" placeholder="Number tickets" class="form-control" value="<%= @post.number_tickets %>">
      </div>

      <button class="btn btn-warning">
        Update Post
      </button>
      or
      <a href="/posts/<%= @post.id %>">Cancel</a>
    </form>
  </div>
</div>
