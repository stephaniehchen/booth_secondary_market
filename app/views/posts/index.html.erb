<div class="page-header">
  <h1>
    Posts
    <a href="/posts/new" class="btn btn-lg btn-success">New Post</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Events</th>
        <th>Content</th>
        <th>Active</th>
        <th>Ticket amount</th>
        <th>User</th>
        <th>Sell buy</th>
        <th>Number tickets</th>
        <th>Actions</th>
      </tr>

      <% @posts.each do |post| %>
      <tr>
        <td><%= post.events_id %></td>
        <td><%= post.content %></td>
        <td><%= post.active %></td>
        <td><%= post.ticket_amount %></td>
        <td><%= post.user_id %></td>
        <td><%= post.sell_buy %></td>
        <td><%= post.number_tickets %></td>
        <td>
          <a href="/posts/<%= post.id %>" class="btn btn-primary">Show</a>
          <a href="/posts/<%= post.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_post/<%= post.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
