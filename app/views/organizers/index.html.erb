<div class="page-header">
  <h1>
    Organizers
    <a href="/organizers/new" class="btn btn-lg btn-success">New Organizer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @organizers.each do |organizer| %>
      <tr>
        <td><a href="<%= organizer.url %>"><%= organizer.name %></a></td>
        <td>
          <a href="/organizers/<%= organizer.id %>/edit" class="btn btn-warning">Edit</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
